{
  "name": "one-dark-theme",
  "displayName": "One Dark Theme",
  "description": "One Dark theme for Visual Studio Code",
  "version": "0.0.0-semantically-released",
  "publisher": "mskelton",
  "author": "Mark Skelton",
  "repository": {
    "type": "git",
    "url": "https://github.com/one-dark/vscode-one-dark-theme.git"
  },
  "bugs": {
    "url": "https://github.com/one-dark/vscode-one-dark-theme/issues"
  },
  "homepage": "https://github.com/one-dark/vscode-one-dark-theme#readme",
  "license": "MIT",
  "keywords": [
    "one-dark",
    "one-dark-vivid",
    "one-dark-italic",
    "vscode-theme",
    "vscode"
  ],
  "eslintConfig": {
    "extends": [
      "@mskelton",
      "@mskelton/eslint-config/typescript"
    ]
  },
  "scripts": {
    "compile:theme": "ts-node ./scripts/generate-theme.ts",
    "compile:ts": "tsc -p src",
    "compile": "npm run compile:theme && npm run compile:ts",
    "lint": "eslint . --ext .ts",
    "watch:theme": "nodemon ./generator/index.ts",
    "watch:ts": "npm run compile:ts -- -w",
    "vscode:prepublish": "npm run compile"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Themes"
  ],
  "icon": "static/icon.png",
  "galleryBanner": {
    "color": "#2d323b",
    "theme": "dark"
  },
  "badges": [
    {
      "href": "https://marketplace.visualstudio.com/items?itemName=mskelton.one-dark-theme",
      "url": "https://img.shields.io/visual-studio-marketplace/v/mskelton.one-dark-theme",
      "description": "Extension version"
    },
    {
      "href": "https://marketplace.visualstudio.com/items?itemName=mskelton.one-dark-theme",
      "url": "https://img.shields.io/visual-studio-marketplace/i/mskelton.one-dark-theme",
      "description": "Extension installs"
    }
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "One Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/one-dark.json"
      }
    ],
    "configuration": {
      "title": "One Dark",
      "properties": {
        "oneDark.bold": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Uses bold font for certain language keywords."
        },
        "oneDark.italic": {
          "type": "boolean",
          "default": true,
          "description": "Uses italic font for language keywords and comments."
        },
        "oneDark.vivid": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Uses the [vivid](https://atom.io/themes/one-dark-vivid-syntax) color palette."
        }
      }
    }
  },
  "devDependencies": {
    "@mskelton/eslint-config": "^5.9.1",
    "@types/node": "^14.0.5",
    "@types/vscode": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "all-contributors-cli": "^6.15.0",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-sort": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "semantic-release-vsce": "^3.0.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3",
    "vsce": "^1.74.0"
  }
}
