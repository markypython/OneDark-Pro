{
  "name": "one-dark-theme",
  "displayName": "One Dark Theme",
  "description": "One Dark theme for Visual Studio Code",
  "version": "0.0.0-semantically-released",
  "publisher": "mskelton",
  "author": "Mark Skelton",
  "repository": {
    "type": "git",
    "url": "https://github.com/one-dark/vscode-one-dark-theme.git"
  },
  "bugs": {
    "url": "https://github.com/one-dark/vscode-one-dark-theme/issues"
  },
  "homepage": "https://github.com/one-dark/vscode-one-dark-theme#readme",
  "license": "MIT",
  "keywords": [
    "one-dark",
    "one-dark-vivid",
    "one-dark-italic",
    "vscode-theme",
    "vscode"
  ],
  "eslintConfig": {
    "extends": [
      "@mskelton",
      "@mskelton/eslint-config/typescript"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "theme": "ts-node ./generator/index.ts",
    "theme:watch": "nodemon ./generator/index.ts",
    "ts": "tsc",
    "ts:watch": "npm run ts -- -w",
    "test": "node out/test/run-test.js",
    "vscode:prepublish": "npm run theme && npm run ts"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Themes"
  ],
  "icon": "static/icon.png",
  "galleryBanner": {
    "color": "#2d323b",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "One Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/one-dark.json"
      },
      {
        "label": "One Dark Vivid",
        "uiTheme": "vs-dark",
        "path": "./themes/one-dark-vivid.json"
      }
    ],
    "configuration": {
      "title": "One Dark",
      "properties": {
        "oneDark.bold": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Uses bold font for certain language keywords."
        },
        "oneDark.italic": {
          "type": "boolean",
          "default": true,
          "description": "Uses italic font for language keywords and comments."
        }
      }
    }
  },
  "devDependencies": {
    "@mskelton/eslint-config": "^5.10.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.9",
    "@types/vscode": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-plugin-sort": "^1.4.0",
    "glob": "^7.1.6",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "semantic-release-vsce": "^3.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3",
    "vsce": "^1.74.0",
    "vscode-test": "^1.4.0"
  }
}
